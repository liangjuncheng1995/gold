<view hidden="{{hidden}}" class="container">
  <image class='classic-img {{playing ? "ratation" : ""}}' src='{{img}}' />
  <image bind:tap="onPlay" class='player-img' catch:tap="onPlay" src='{{ !playing ? playSrc : pauseSrc }}' />
  <image class='tag' src='images/music@tag.png' />
  <text class='content'>{{content}}</text>
</view>